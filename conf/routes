# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
# backend home page
GET     /dashboard                  controllers.backend.Application.dashboard()
# frontend home page
GET     /                           controllers.frontend.Application.index()

#

# User
GET     /users                      controllers.UserController.index(page, limit)
GET     /users/:id                  controllers.UserController.one(id: Long)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
