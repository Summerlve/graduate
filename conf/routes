# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# backend
GET                 /dashboard                                      controllers.backend.Dashboard.index()
GET                 /dashboard/dashboard_data                       controllers.backend.Dashboard.data()
GET                 /dashboard/charts                               controllers.backend.Charts.index()
GET                 /dashboard/charts_data                          controllers.backend.Charts.data(territory_name: String)
GET                 /dashboard/login                                controllers.backend.Auth.index()
POST                /dashboard/login                                controllers.backend.Auth.login()
GET                 /dashboard/logout                               controllers.backend.Auth.logout()
GET                 /dashboard/data_manager                         controllers.backend.DataManager.index()
GET                 /dashboard/info                                 controllers.backend.Info.index()
POST                /dashboard/info                                 controllers.backend.Info.change()
POST                /dashboard/search                               controllers.backend.Dashboard.search()
GET                 /dashboard/data_manager/backup                  controllers.backend.DataManager.backup()
GET                 /dashboard/data_manager/restore                 controllers.backend.DataManager.restore()
GET                 /dashboard/orders                               controllers.backend.OrderHandle.index()
GET                 /dashboard/orders_state/:id                     controllers.backend.OrderHandle.handle(id: Long)
GET                 /dashboard/delete_order/:id                     controllers.backend.OrderHandle.delete(id: Long)
GET                 /dashboard/data_manager/get_area                controllers.backend.DataManager.getArea(id: Long)
GET                 /dashboard/data_manager/get_building            controllers.backend.DataManager.getBuilding(id: Long)
GET                 /dashboard/data_manager/get_house               controllers.backend.DataManager.getHouse(id: Long)
POST                /dashboard/data_manager/add_area                controllers.backend.DataManager.addArea()
POST                /dashboard/data_manager/add_building            controllers.backend.DataManager.addBuilding()
POST                /dashboard/data_manager/add_house               controllers.backend.DataManager.addHouse()
POST                /dashboard/data_manager/update_area/:id         controllers.backend.DataManager.updateArea(id: Long)
POST                /dashboard/data_manager/update_building/:id     controllers.backend.DataManager.updateBuilding(id: Long)
POST                /dashboard/data_manager/update_house/:id        controllers.backend.DataManager.updateHouse(id: Long)
GET                 /dashboard/data_manager/delete_area/:id         controllers.backend.DataManager.deleteArea(id: Long)
GET                 /dashboard/data_manager/delete_building/:id     controllers.backend.DataManager.deleteBuilding(id: Long)
GET                 /dashboard/data_manager/delete_house/:id        controllers.backend.DataManager.deleteHouse(id: Long)
GET                 /dashboard/user_manager                         controllers.backend.UserManager.index(page: Integer)
POST                /dashboard/user_manager/change/:id              controllers.backend.UserManager.change(id: Long)
GET                 /dashboard/user_manager/info/:id                controllers.backend.UserManager.info(id: Long)

# frontend
GET                 /                                               controllers.frontend.Application.index()
GET                 /index                                          controllers.frontend.Application.index()
GET                 /search                                         controllers.frontend.Application.search()
GET                 /houses/:id                                     controllers.frontend.Application.house(id: Long)
POST                /order/:id                                      controllers.frontend.Application.order(id: Long)
GET                 /areas/:id                                      controllers.frontend.Application.area(id: Long)
GET                 /buildings/:id                                  controllers.frontend.Application.building(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)
