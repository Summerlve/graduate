# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# backend
GET     /dashboard                  controllers.backend.Dashboard.index()
GET     /dashboard/charts           controllers.backend.Charts.index()
GET     /dashboard/login            controllers.backend.Auth.index()
POST    /dashboard/login            controllers.backend.Auth.login()
GET     /dashboard/logout           controllers.backend.Auth.logout()
GET     /dashboard/data_manager     controllers.backend.DataManager.index()


# frontend
GET     /                           controllers.frontend.Application.index()
GET     /index                      controllers.frontend.Application.index()
GET     /search                     controllers.frontend.Application.search()
GET     /buy/:id                    controllers.frontend.Buy.index(id: Long)
POST    /buy/:id                    controllers.frontend.Buy.buy(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
